#include <Windows.h>

#ifdef _DEBUG
#define VERSION_FILEFLAGS VS_FF_DEBUG
#else // _DEBUG
#define VERSION_FILEFLAGS 0L
#endif // _DEBUG

VS_VERSION_INFO VERSIONINFO
FILEVERSION		${PROJECT_VERSION_MAJOR},${PROJECT_VERSION_MINOR},${PROJECT_VERSION_PATCH},0
PRODUCTVERSION	${PROJECT_VERSION_MAJOR},${PROJECT_VERSION_MINOR},${PROJECT_VERSION_PATCH},0
FILEOS			VOS_NT_WINDOWS32
FILETYPE		VFT_DLL
FILESUBTYPE		VFT2_UNKNOWN
FILEFLAGS		VERSION_FILEFLAGS
BEGIN
	BLOCK "StringFileInfo"
	BEGIN
		BLOCK "040904b0"
		BEGIN
			VALUE "CompanyName",		"${PROJECT_TITLE}"
			VALUE "ProductName",		"${PROJECT_TITLE}"
			VALUE "ProductVersion",		"${PROJECT_VERSION_WITH_BUILD}"
			VALUE "FileDescription",	"${PROJECT_DESCRIPTION}"
			VALUE "FileVersion",		"${PROJECT_VERSION_WITH_BUILD}"
			VALUE "LegalCopyright",		"${PROJECT_COPYRIGHT}"
			VALUE "OriginalFilename"	"$<TARGET_FILE_NAME:${PROJECT_NAME}>"
			VALUE "InternalName"		"$<TARGET_FILE_BASE_NAME:${PROJECT_NAME}>"
		END
	END

	BLOCK "VarFileInfo"
	BEGIN
		VALUE "Translation", 0x409, 1200 // en-US, UTF-16
	END
END
