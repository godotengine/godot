    material mxp_in1 = material() [[ anno::usage( "materialx:vdf") ]],
    color mxp_in2 = color(1.0)
) [[ 
    anno::usage( "materialx:vdf") 
]]
= material(
    ior:    mxp_in1.ior,
    volume: material_volume(
