
import os
Import('env')

print(os.name)
if os.name == 'nt':
	env.add_source_files(env.modules_sources, "process_win.cpp") # Add all cpp files to the build
	env.add_source_files(env.modules_sources, "process.cpp") # Add all cpp files to the build
else:
    env.add_source_files(env.modules_sources, "process.cpp") # Add all cpp files to the build
    env.add_source_files(env.modules_sources, "process_unix.cpp") # Add all cpp files to the build

