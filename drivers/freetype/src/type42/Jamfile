SubDir  FT2_TOP $(FT2_SRC_DIR) type42 ;

{
  local  _sources ;

  if $(FT2_MULTI)
  {
    _sources = t42drivr
               t42objs
               t42parse
               ;
  }
  else
  {
    _sources = type42 ;
  }

  Library  $(FT2_LIB) : $(_sources).c ;
}

